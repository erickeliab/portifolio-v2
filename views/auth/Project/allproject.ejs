
<!-- <body class="hold-transition sidebar-mini layout-fixed"> -->
  <div class="wrapper">

    <!-- BarS -->
    <%- include('../../partials/admin-bars') -%>
  
  
    <!-- Content Wrapper. Contains page content -->
    <div class="content-wrapper">
  
  
      <!-- Content Header (Page header) -->
      <%- include('../../partials/admin-header') -%>
  
      <!-- /.content-header -->
  
      <!-- Main content -->
      <section class="content">
        <div class="container-fluid">
          <!-- Small boxes (Stat box) -->
          
          <div class="col-md-12 container">
            <div class="card">
              <div class="card-header">
                <h3 class="card-title">Projects</h3>

                <div class="card-tools">
                  <ul class="pagination pagination-sm float-right">
                    <li class="page-item"><a class="page-link" href="#">&laquo;</a></li>
                    <li class="page-item"><a class="page-link" href="#">1</a></li>
                    <li class="page-item"><a class="page-link" href="#">2</a></li>
                    <li class="page-item"><a class="page-link" href="#">3</a></li>
                    <li class="page-item"><a class="page-link" href="#">&raquo;</a></li>
                  </ul>
                </div>
              </div>
              <!-- /.card-header -->
              <div class="card-body p-0 table-responsive">
                <table class="table table-striped table-light table-hovable">
                  <thead>
                    <tr>
                      <th style="width: 10px">#</th>
                      <th>Project</th>
                      <th style="width: 40px">Tools</th>

                      <th>Completed</th>
                     
                    </tr>
                  </thead>
                  <tbody>
                    <%
                      projects.forEach(project => {
                        %>

                        <tr>
                          
                      <td><%= project.id %></td>
                      <td><a href="/projects/<%= project.id %>" class="text-bold btn btn-default"> <%= project.projectname %></a></td>
                      <td class="row">
                        <% for (let i = 0; i <= 1; i++) {
                            
                          %> 
                          <span class=""> <%= project.tools[i] %></span>
                          <%
                        } %>
                       
                        <% 
                        if (project.tools[2]) {
                          %> 
                          <br><span class="">...</span>
                          <%
                        }
                        %>
                        </td>
                
                      <td>
                        <div class="progress progress-xs">
                            <div class="progress-bar progress-bar-success" style='width: <%= project.completed %>%'></div>
                          </div></td>

                          <td>
                            <%= project.completed %>%
                    </td>
                  <td>
                    <a href="/projects/edit/<%- project.id %>">Edit</a>
                    </td>
                    </tr>


                        <%
                        
                      });
                      
                      %>
                   
                    
                  </tbody>
                </table>
              </div>
              <!-- /.card-body -->
            </div>
            <!-- /.card -->


  
          <!-- Main row -->
          <div class="row">
            <!-- Left col -->
            <section class="col-lg-7 connectedSortable">
           
      </section>
      <!-- /.content -->
    </div>
    <!-- /.content-wrapper -->
    <%- include('../../partials/admin-footer') -%>
  
    <!-- Control Sidebar -->
    <aside class="control-sidebar control-sidebar-dark">
      <!-- Control sidebar content goes here -->
    </aside>
    <!-- /.control-sidebar -->
  </div>
  <!-- ./wrapper -->
  
  